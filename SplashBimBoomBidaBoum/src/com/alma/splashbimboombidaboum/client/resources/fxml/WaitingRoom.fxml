<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.alma.splashbimboombidaboum.client.controller.WaitingRoomController"
	fx:id="mainVBox">

	<children>
		<HBox spacing="10" fx:id="playerHBox">
			<children>
				<VBox>
					<Label fx:id="playerLabel" />
					<Circle fx:id="playerCircle" radius="5" fill="#D72638" />
					<Button fx:id="playerButton" text="Ready"
						onAction="#handleStatueButtonAction" />
				</VBox>
			</children>
		</HBox>
		<Button text="Leave room" onAction="#handleLeaveButtonAction" />
		<HBox spacing="5">
			<children>
				<Label fx:id="roomLabel" />
				<Button text="Copy" onAction="#handleCopyButtonAction" />
			</children>
		</HBox>
	</children>
</VBox>

